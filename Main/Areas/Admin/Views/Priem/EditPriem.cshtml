@model PriemViewModel


<form asp-action="EditPriem" method="post">

    <input type="hidden" asp-for="Id" />
    <div id="errors-div" asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GroupId" class="control-label"></label>
        @Html.DropDownListFor(x => x.GroupId, new SelectList( Model.Groups, "Id", "Name"), htmlAttributes: new { @class = "form-control" })
        <span asp-validation-for="GroupId" class="text-danger"></span>
    </div>

    <input type="submit" value="Применить" class="btn btn-primary" />
</form>
