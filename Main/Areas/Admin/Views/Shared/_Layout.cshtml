    <!-- Modal -->
    <div class="modal" id="layout_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="layout_modal_header"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body" id="modal_root">
                </div>

                <div class="modal-footer d-none" id="layout_modal_footer">
                    <button type="button" class="btn btn-primary" id="bt_modal_ok" data-dismiss="modal">Ок</button>
                </div>
            </div>
        </div>
    </div>


    <div class="container-fluid">
        <main role="main" class="pb-3" id="main_item">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
